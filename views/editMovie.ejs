<%- include("./partials/head.ejs") %>

<h1>Edit movie</h1>


<form action="/movies/<%= movie._id%>?_method=PUT" method="POST">
    <h3>
      <div>
        <label for="title"> Title: </label>
        <input type="text" name="title" id="title" placeholder="movie title" value=<%= movie.title%>>
      </div>
      <br/>
      <div>
        <label for="release"> Release: </label>
        <input type="number" name="release" id="release" placeholder="movie release" value=<%= movie.release%>>
      </div>
      <br/>
      <div>
        <label for="genre"> Genre: </label>
        <input type="text" name="genre" id="genre" placeholder="movie genre" value=<%= movie.genre%>>
      </div>
    </h3>
    <button type="submit" class="btnSubmit">
        <span>Edit movie</span>
    </button>
      
</form>


<br/>
<%- include("./partials/end.ejs") %>